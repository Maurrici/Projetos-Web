<%- include("../../partials/header.ejs")  %> 

<%- include("../../partials/navbarSeller.ejs") %> 

<div class="container">
    <div class="row align-items-center">
        <div class="col-6">
            <h4>Cadastro de Compra</h4>
        </div>
    </div>

    <div class="mt-3">
        <form action="" class="row">
            <div class="col-12 col-md-6 mt-2">
                <label for="cpf" class="form-label">CPF do Cliente</label>
                <input type="text" id="cpf" name="cpf" class="form-input">
            </div>
            <div class="col-12 row justify-content-center align-items-center mt-2 mx-0">
                <div class="shopping-list col-12 col-md-8">
                    <div class="ticket-body-header row">
                        <div class="col-2">ID</div>
                        <div class="col-4">Nome</div>
                        <div class="col-2">Qtd</div>
                        <div class="col-2">Valor Unit.</div>
                        <div class="col-2">Valor Final</div>
                    </div>
                    <div class="ticket-item row">
                        <input type="hidden" name="productID" value="1" id="{ID}">
                        <input type="hidden" name="quantity" value="2" id="{ID}-quantity">
                        <div class="col-2">1</div>
                        <div class="col-4">Coca-Cola</div>
                        <div class="col-2">10</div>
                        <div class="col-2">9.00</div>
                        <div class="col-2">90.00</div>
                    </div>
                </div>
                <div class="products-list col-12 col-md-4 mt-2 mt-md-0">
                    <input type="text" name="search" id="search" class="input-search" placeholder="Pesquisa de produto">
                    <div class="product-box">
                        <div class="ticket-body-header row">
                            <div class="col-4">ID</div>
                            <div class="col-8">Nome</div>
                        </div>
                        <div class="ticket-item row">
                            <div class="col-4">1</div>
                            <div class="col-8">Coca-Cola</div>
                        </div>
                        <div class="ticket-item row">
                            <div class="col-4">2</div>
                            <div class="col-8">Biscoito de Chocolate</div>
                        </div>
                    </div>
                    <button class="button-add w-100">Adicionar produto</button>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
                <button class="button-submit">
                    Finalizar Compra
                </button>
            </div>
        </form>
    </div>
</div>

<%- include("../../partials/footer.ejs")  %> 
