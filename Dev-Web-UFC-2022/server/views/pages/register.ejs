<%- include("../partials/header.ejs") %> 

<%- include("../partials/navbar.ejs") %> 

<% if (type == undefined) { %>
    <div class="container center-box">
        <div class="row justify-content-around">
            <div class="card col-12 col-md-4">
                <a href="/register?type=supermarket">
                    <div class="card-img">
                        <img src="/img/supermarket.jpg" class="img-fluid">
                    </div>
                    <div class="card-title">
                        Cadastrar Super Mercado
                    </div>
                </a>
            </div>
    
            <div class="card col-12 col-md-4 green">
                <a href="/register?type=customer">
                    <div class="card-img">
                        <img src="/img/customer.jpg" class="img-fluid">
                    </div>
                    <div class="card-title">
                        Cadastrar como cliente
                    </div>
                </a>
            </div>
        </div>
    </div>
<% } else if (type == "supermarket"){ %>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6">
                <h4>Cadastro de Mercado</h4>
            </div>
        </div>
    
        <div class="mt-3">
            <form action="" class="row">
                <div class="col-12 mt-2">
                    <label for="name" class="form-label">Nome</label>
                    <input type="text" id="name" name="name" class="form-input">
                </div>
                <div class="col-12 mt-2">
                    <label for="cnpj" class="form-label">CNPJ</label>
                    <input type="text" id="cnpj" name="cnpj" class="form-input">
                </div>
                <div class="col-12 mt-2">
                    <label for="address" class="form-label">Endereço</label>
                    <input type="text" id="address" name="address" class="form-input">
                </div>
                <div class="col-12 mt-2">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-input">
                </div>
                <div class="col-12 col-md-6 mt-2">
                    <label for="password" class="form-label">Senha</label>
                    <input type="password" id="password" name="password" class="form-input">
                </div>
                <div class="col-12 col-md-6 mt-2">
                    <label for="confirmPassword" class="form-label">Confirmar senha</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-input">
                </div>
                <div class="col-12 mt-2">
                    <label for="description" class="form-label">Descrição</label>
                    <textarea name="description" id="description" class="form-input" rows="5">
                    </textarea>
                </div>
    
                <div class="d-flex justify-content-center mt-3">
                    <button class="button-submit">
                        Cadastrar
                    </button>
                </div>
            </form>
        </div>
    </div>
<% } else if (type == "customer"){%>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6">
                <h4>Cadastro de Cliente</h4>
            </div>
        </div>
    
        <div class="mt-3">
            <form action="" class="row">
                <div class="col-12 mt-2">
                    <label for="name" class="form-label">Nome</label>
                    <input type="text" id="name" name="name" class="form-input">
                </div>
                <div class="col-12 mt-2">
                    <label for="cpf" class="form-label">CPF</label>
                    <input type="text" id="cpf" name="cpf" class="form-input">
                </div>
                <div class="col-12 mt-2">
                    <label for="address" class="form-label">Endereço</label>
                    <input type="text" id="address" name="address" class="form-input">
                </div>
                <div class="col-12 mt-2">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-input">
                </div>
                <div class="col-12 col-md-6 mt-2">
                    <label for="password" class="form-label">Senha</label>
                    <input type="password" id="password" name="password" class="form-input">
                </div>
                <div class="col-12 col-md-6 mt-2">
                    <label for="confirmPassword" class="form-label">Confirmar senha</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-input">
                </div>
    
                <div class="d-flex justify-content-center mt-3">
                    <button class="button-submit">
                        Cadastrar
                    </button>
                </div>
            </form>
        </div>
    </div>
<% } %>


