<%- include("../../partials/header.ejs")  %> 

<%- include("../../partials/navbarCustomer.ejs") %> 

<div class="container">
    <div class="row align-items-center">
        <div class="col-6">
            <h4>Perfil</h4>
        </div>
    </div>

    <div class="mt-3">
        <form action="" class="row">
            <div class="col-12 mt-2">
                <label for="name" class="form-label">Nome</label>
                <input type="text" id="name" name="name" class="form-input" value="Maurício de Moura">
            </div>
            <div class="col-12 mt-2">
                <label for="cpf" class="form-label">CPF</label>
                <input type="text" id="cpf" name="cpf" class="form-input" value="12345689-49">
            </div>
            <div class="col-12 mt-2">
                <label for="address" class="form-label">Endereço</label>
                <input type="text" id="address" name="address" class="form-input" value="Rua Pedestre Z, 143">
            </div>
            <div class="col-12 mt-2">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-input" value="mauricio@gmail.com">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="password" class="form-label">Senha</label>
                <input type="password" id="password" name="password" class="form-input" value="123456">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="confirmPassword" class="form-label">Confirmar senha</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-input">
            </div>

            <div class="d-flex justify-content-center mt-3">
                <button class="button-submit">
                    Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

