<%- include("../partials/header.ejs")  %> 

<%- include("../partials/navbar.ejs") %> 

    <% if(type != undefined) { %>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-6">
                    <h4>Login</h4>
                </div>
            </div>
        
            <div class="mt-3">
                <form action="/login" method="post">
                    <input type="hidden" name="type" value="<%= type %>">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-6 mt-2">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="email" class="form-input">
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-6 mt-2">
                            <label for="password" class="form-label">Senha</label>
                            <input type="password" id="password" name="password" class="form-input">
                        </div>
                    </div>
        
                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" class="button-submit">
                            Entrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    <% } else { %>
        <div class="container center-box">

            <div class="row justify-content-around">
                <div class="card col-12 col-md-3 mt-2">
                    <a href="/login?type=supermarket">
                        <div class="card-img">
                            <img src="/img/supermarket.jpg" class="img-fluid">
                        </div>
                        <div class="card-title">
                            Entrar como Super Mercado
                        </div>
                    </a>
                </div>
        
                <div class="card col-12 col-md-3 green mt-2">
                    <a href="/login?type=customer">
                        <div class="card-img">
                            <img src="/img/customer.jpg" class="img-fluid">
                        </div>
                        <div class="card-title">
                            Entrar como cliente
                        </div>
                    </a>
                </div>
        
                <div class="card col-12 col-md-3 blue mt-2">
                    <a href="/login?type=seller">
                        <div class="card-img">
                            <img src="/img/seller.jpg" class="img-fluid">
                        </div>
                        <div class="card-title">
                            Entrar como vendedor
                        </div>
                    </a>
                </div>
            </div>
        </div>
    <% } %>
    

<%- include("../partials/footer.ejs")  %> 