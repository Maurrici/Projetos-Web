<%- include("../../../partials/header.ejs")  %> 

<%- include("../../../partials/navbar.ejs") %>

<div class="container">
    <div class="row align-items-center">
        <div class="login-name">
            <%= supermarket.name %>
        </div>
        <div class="col-12 col-md-6">
            <h4>Edição de Vendedor</h4>
        </div>
    </div>

    <div class="mt-3">
        <form action="" class="row">
            <div class="col-12 col-md-6 mt-2">
                <label for="name" class="form-label">Nome</label>
                <input type="text" id="name" name="name" class="form-input" value="<%= seller.name %>">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="cpf" class="form-label">CPF</label>
                <input type="text" id="cpf" name="cpf" class="form-input" value="<%= seller.cpf %>">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="cpf" class="form-label">Email</label>
                <input type="text" id="email" name="email" class="form-input" value="<%= seller.email %>">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="password" class="form-label">Senha</label>
                <input type="password" id="password" name="password" class="form-input">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="confirmPassword" class="form-label">Confirmar senha</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-input">
            </div>

            <div class="d-flex justify-content-center mt-3">
                <button class="button-submit">
                    Editar
                </button>
            </div>
        </form>
    </div>
</div>

<%- include("../../../partials/footer.ejs")  %> 