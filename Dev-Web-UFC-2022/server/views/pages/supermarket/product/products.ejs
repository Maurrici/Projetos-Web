<%- include("../../../partials/header.ejs")  %> 

<%- include("../../../partials/navbar.ejs") %> 

<div class="container">
    <div class="row align-items-center">
        <div class="login-name">
            <%= supermarket.name %>
        </div>

        <div class="col-12 col-md-6">
            <h4>Produtos</h4>
        </div>

        <div class="col-12 col-md-6 d-flex justify-content-md-end justify-content-center">
            <a href="/product" class="button-add">Adicionar produto</a>
        </div>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Marca</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor(R$)</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            <tbody>
            <% supermarket.products.forEach(p => { %>
                <tr>
                    <th scope="row"><%= p.id %></th>
                    <td><%= p.name %></td>
                    <td><%= p.description %></td>
                    <td><%= p.brand %></td>
                    <td><%= p.quantity %></td>
                    <td><%= p.value %></td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <a href="/product/<%= p.id %>" class="action-item">
                                <img src="/icon/edit.png" class="img-fluid" alt="Editar">
                                <span class="tooltip-text">Editar</span>
                            </a>
                            <a href="" class="action-item">
                                <img src="/icon/delete.png" class="img-fluid" alt="Deletar">
                                <span class="tooltip-text">Deletar</span>
                            </a>
                        </div>
                    </td>
                  </tr>
            <% }) %>
            </tbody>
          </table>
    </div>
    
</div>

<%- include("../../../partials/footer.ejs")  %> 