<%- include("../../../partials/header.ejs")  %> 

<%- include("../../../partials/navbar.ejs") %>

<div class="container">
    <div class="row align-items-center">
        <div class="login-name">
            <%= supermarket.name %>
        </div>

        <div class="col-12 col-md-6">
            <h4>Cadastro de Produto</h4>
        </div>
    </div>

    <div class="mt-3">
        <form action="" class="row">
            <div class="col-12 col-md-6 mt-2">
                <label for="code" class="form-label">Código de barras</label>
                <input type="text" id="code" name="code" class="form-input">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="name" class="form-label">Nome</label>
                <input type="text" id="name" name="name" class="form-input">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="brand" class="form-label">Marca</label>
                <input type="text" id="brand" name="brand" class="form-input">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="quantity" class="form-label">Quantidade</label>
                <input type="number" id="quantity" name="quantity" class="form-input">
            </div>
            <div class="col-12 col-md-6 mt-2">
                <label for="value" class="form-label">Valor</label>
                <input type="number" id="value" name="value" class="form-input">
            </div>
            <div class="col-12 mt-2">
                <label for="description" class="form-label">Descrição</label>
                <textarea name="description" id="description" class="form-input" rows="5"></textarea>
            </div>

            <div class="d-flex justify-content-center mt-3">
                <button class="button-submit">
                    Cadastrar
                </button>
            </div>
        </form>
    </div>
</div>

<%- include("../../../partials/footer.ejs")  %> 